{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
          "error",
          { "code": 82 }
        ],
        "brace-style": [
          "error"
        ],
        "yoda": [
          "error"
        ],
        "space-before-blocks": [
          "error",
          "always"
        ],
        "spaced-comment": [
          "error",
          "always"
        ],
        "keyword-spacing": [
          "error"
        ],
        "object-curly-spacing": [
          "warn",
          "always"
        ],
        "eqeqeq": [
          "error",
          "always"
        ]
    }
}
